<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutToolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/TextViewStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/description"
        android:textAlignment="viewStart"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/box"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_normal_margin"
            android:layout_marginTop="@dimen/app_normal_margin"
            android:background="#d3d3d3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCqPhoto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/cq_camera"
                android:layout_gravity="center"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edtCqWriteHere"
            style="@style/EditTextStyle"
            android:layout_marginBottom="5dp"
            android:background="@drawable/box"
            android:gravity="left|top"
            android:hint="@string/writedesrciption"
            android:lines="4"
            android:padding="5dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cqRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/app_normal_margin"
            android:layout_marginRight="@dimen/app_normal_margin"
            android:background="@drawable/box"
            android:padding="5dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


    <Button
        android:id="@+id/btnCqSubmit"
        style="@style/ButtonStyle"
        android:onClick="clickIt"
        android:layout_margin="@dimen/app_normal_margin"
        android:layout_alignParentBottom="true"
        android:text="@string/submit" />

</LinearLayout>