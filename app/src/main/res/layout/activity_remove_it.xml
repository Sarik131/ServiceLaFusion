            android:layout_height="wrap_content"
            android:text="GOOGLE MAPS"
            android:background="@drawable/round_button"
            android:textColor="@color/colorBackgroundWhite"/>
        <Button
            android:id="@+id/arBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="AR"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_button"
            android:textColor="@color/colorBackgroundWhite"/>


