        <EditText
            android:id="@+id/fedtQsReply"
            style="@style/EditTextStyle"
            android:layout_marginTop="@dimen/app_normal_margin"
            android:background="@drawable/box"
            android:gravity="left|top"
            android:hint="Reply"
            android:lines="4"
            android:padding="5dp" />

        <EditText
