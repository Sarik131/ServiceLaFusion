<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    >



    <include layout="@layout/layout_toolbar"/>



        <EditText
            android:id="@+id/edtSpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            style="@style/EditTextStyle"
            android:layout_marginTop="@dimen/app_normal_margin"
            android:hint="@string/name" />

        <EditText
            android:id="@+id/edtSpEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="@string/email" />

        <EditText
            android:id="@+id/edtSpPhoneNumber"
            android:inputType="number"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="@string/phone_number" />



        <EditText
           style="@style/EditTextStyle"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtSpPassword"
            android:hint="@string/password"
            android:maxLength="20" />

        <EditText
            style="@style/EditTextStyle"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtSpRenterPass"
            android:hint="@string/retype_password"/>

    <EditText
        android:id="@+id/edtSpExperience"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="2"
        android:hint="@string/experience"
        android:inputType="number" />

        <Spinner
            android:id="@+id/spSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/app_small_margin"
            android:layout_marginLeft="@dimen/app_normal_margin"
            android:layout_marginRight="@dimen/app_normal_margin"
            android:layout_marginBottom="@dimen/app_small_margin"
            android:autofillHints="Select Category" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:gravity="bottom"
        >

    <Button
        android:id="@+id/btnSpSubmit"
        style="@style/ButtonStyle"


        android:layout_marginTop="10dp"
        android:onClick="onSubmit"
        android:text="@string/submit"
        android:textColor="@color/colorBackgroundWhite" />

    </LinearLayout>

    </LinearLayout>

